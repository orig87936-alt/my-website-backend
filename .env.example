# 应用配置
APP_NAME="S&L News API"
DEBUG=True

# 数据库配置
# 本地开发（需要先安装 PostgreSQL）
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/sl_news

# 或者使用 AWS RDS（生产环境）
# DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/sl_news

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# JWT 配置（请修改为随机字符串，至少32字符）
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS 配置（JSON 数组格式）
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","https://your-domain.vercel.app"]

# 邮件配置（可选）
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@your-domain.com

